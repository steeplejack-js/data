{
  "name": "@steeplejack/data",
  "version": "0.0.0",
  "description": "The Steeplejack data modelling",
  "main": "index.js",
  "scripts": {
    "clean": "rm -Rf ./coverage ./tmp",
    "ci": "npm test -s && npm run coverage -s && npm run compile -s",
    "compile": "npm run clean && tsc",
    "compile:all": "npm run clean && tsc --outDir ./tmp && cp ./exception/index* ./tmp/exception",
    "compile:js": "babel --source-maps inline --out-file exception/index.js exception/index.js",
    "coverage": "npm run compile:all -s && npm run coverage:report -s",
    "coverage:report": "istanbul cover _mocha ./tmp/test/unit/ -- --recursive ./tmp/test/unit",
    "postversion": "git push --tags && git push",
    "test": "npm run test:lint -s && npm run test:unit -s",
    "test:lint": "tslint *.ts **/*.ts --exclude=*.d.ts --exclude=**/*.d.ts",
    "test:unit": "mocha --compilers ts:ts-node/register --throw-deprecation --ui bdd --full-trace --recursive test/unit",
    "watch:coverage": "nodemon --ext js,ts --exec 'npm run coverage -s' --legacy-watch",
    "watch:test": "nodemon --ext js,ts --exec 'npm run test -s' --legacy-watch",
    "watch:test:lint": "nodemon --ext js,ts --exec 'npm run test:lint -s' --legacy-watch",
    "watch:test:unit": "nodemon --ext js,ts --exec 'npm run test:unit -s' --legacy-watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/steeplejack-js/data.git"
  },
  "author": "Simon Emms <simon@simonemms.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/steeplejack-js/data/issues"
  },
  "homepage": "https://github.com/steeplejack-js/data#readme",
  "dependencies": {
  },
  "devDependencies": {
    "@types/bluebird": "^3.0.36",
    "@types/chai": "^3.4.34",
    "@types/chai-as-promised": "0.0.29",
    "@types/lodash": "^4.14.43",
    "@types/mocha": "^2.2.33",
    "@types/node": "^0.0.2",
    "@types/proxyquire": "^1.3.27",
    "@types/sinon": "^1.16.32",
    "@types/sinon-chai": "^2.7.27",
    "babel-cli": "^6.18.0",
    "babel-preset-latest": "^6.16.0",
    "bluebird": "^3.4.6",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "proxyquire": "^1.7.10",
    "remap-istanbul": "^0.7.0",
    "sinon": "^1.17.6",
    "sinon-as-promised": "^4.0.2",
    "sinon-chai": "^2.8.0",
    "ts-node": "^1.7.2",
    "tslint": "^4.0.2",
    "typescript": "^2.1.4"
  }
}
